# Telegram Connector Configuration
# Create a copy of this file named '.env' and fill in the values

# Telegram Configuration (Required)
# ----------------------------------
# Your Telegram bot token from BotFather (format: NUMBER:STRING)
TELEGRAM_BOT_TOKEN=123456789:ABCDefGHIJklmnOPQRSTuvwxyz

# Comma-separated list of Telegram user IDs allowed to use the bot
ALLOWED_USER_IDS=123456789,987654321

# MT4 API Configuration (Required)
# --------------------------------
# URL to your MT4 API service
MT4_API_URL=http://localhost:5002/api/v1

# Application Settings (Optional)
# -------------------------------
# Port for the webhook server
FLASK_PORT=5001

# Enable Flask debug mode (True/False)
FLASK_DEBUG=False

# Run in mock mode without actual trading (True/False)
MOCK_MODE=False

# Comma-separated list of admin user IDs with additional privileges
ADMIN_USER_IDS=123456789

# Secret key for Flask session encryption
SECRET_KEY=change_this_to_a_random_string

# Webhook URL for Telegram bot
TELEGRAM_WEBHOOK_URL=http://localhost:5001/webhook